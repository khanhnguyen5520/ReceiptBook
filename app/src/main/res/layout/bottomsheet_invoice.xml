            android:id="@+id/tvMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="end"
            android:hint="0"
            android:textColor="@color/textColor"
            android:textSize="30sp" />
    </LinearLayout>

